#!/bin/bash

if [ ! -d ~/.local/npkg ]; then
	echo "Error: npkg is not installed! Please check your installation and reinstall"
	exit 1
fi

if ! command -v python && ! command -v python3 2>&1 >/dev/null; then
	echo "Error: Python3 is not installed! Make sure to install Python3"
	exit 1
fi

python3 ~/.local/npkg/Main.py $@

exit
